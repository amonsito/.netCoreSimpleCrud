@model PruebaNetJuanAvila.Dto.Dto.LibrosDto

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Libro</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Isbn" type="hidden" class="form-control" />
            <div class="form-group">
                <label asp-for="EditorialesId" class="control-label"></label>
                <select asp-for="EditorialesId" class="ddlMultiSlectBox form-control" asp-items="@ViewBag.Editoriales"></select>
                <span asp-validation-for="EditorialesId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Autores" class="control-label"></label>
                <select asp-for="Autores" class="form-control" asp-items="@ViewBag.Autores"></select>
                <span asp-validation-for="Autores" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sinopsis" class="control-label"></label>
                <textarea asp-for="Sinopsis" class="form-control"></textarea>
                <span asp-validation-for="Sinopsis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NPaginas" class="control-label"></label>
                <input asp-for="NPaginas" class="form-control" />
                <span asp-validation-for="NPaginas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Ir atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
